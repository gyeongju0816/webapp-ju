<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>webapp-ju</display-name>
<!-- Welcome file list -->
<welcome-file-list>
	<welcome-file>index.html</welcome-file>
<welcome-file>/jsp/index.jsp</welcome-file>
</welcome-file-list>
<error-page>
	<error-code>404</error-code>
	<location>/error/404.html</location>
</error-page>
<error-page>
	<error-code>503</error-code>
	<location>/error/503.html</location>
</error-page>
<servlet>

<servlet-name>HelloServlet</servlet-name>

<servlet-class>kr.ac.kku.cs.wp.ju.HelloServlet</servlet-class>

<init-param>

<param-name>greeting</param-name>

<param-value>Hello, World from ServletConfig!</param-value>

</init-param>

</servlet>

<servlet-mapping>

<servlet-name>HelloServlet</servlet-name>

<url-pattern>/hello</url-pattern>

</servlet-mapping>



<filter>

<filter-name>AuthenticationFilter</filter-name>

<filter-class>kr.ac.kku.cs.wp.ju.AuthenticationFilter</filter-class>

<init-param>

<param-name>valve</param-name>

<param-value>on</param-value>

</init-param>

</filter>

<filter-mapping>

<filter-name>AuthenticationFilter</filter-name>

<url-pattern>/jsp/user/*</url-pattern>

</filter-mapping>

<filter-mapping>

<filter-name>AuthenticationFilter</filter-name>

<url-pattern>/jsp/admin/*</url-pattern>

</filter-mapping>

<filter-mapping>

<filter-name>AuthenticationFilter</filter-name>

<url-pattern>/logout</url-pattern>

</filter-mapping>

<session-config>
<session-timeout>30</session-timeout>
</session-config>




</web-app>